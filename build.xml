<?xml version="1.0" encoding="UTF-8"?>
<project default="xar" name="hsg-shell">
    <xmlproperty file="expath-pkg.xml"/>
    <property name="project.version" value="${package(version)}"/>
    <property name="project.app" value="hsg-shell"/>
    <property name="build.dir" value="build"/>
    <target name="xar">
        <mkdir dir="${build.dir}"/>
        <zip basedir="." destfile="${build.dir}/${project.app}-${project.version}.xar"
             excludes="${build.dir}/** node_modules/** app/** package.json gulpfile.js .idea/**"/>
    </target>
    <target name="clean">
        <delete>
            <fileset dir="${build.dir}">
                <include name="*.xar"/>
            </fileset>
        </delete>
    </target>
</project>