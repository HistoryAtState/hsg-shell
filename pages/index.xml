<?xml version="1.0" encoding="UTF-8"?>
<div data-template="templates:surround" data-template-at="content"
    data-template-with="templates/site.xml">
    <div class="hidden" id="static-title"/>
    <div class="row">
        <div class="hsg-width-one-whole" data-template="app:load-carousel-items">
            <h2 class="section-heading">Latest News</h2>
            <section class="carousel-item" data-template="app:each"
                data-template-from="carousel-items" data-template-to="carousel-item">
                <div data-template="app:fix-links">
                    <div class="carousel-image" style="width: 15%;">
                        <a xml:space="preserve"><span data-template="app:carousel-item-href-attribute"/>
                            <img class="img-responsive"><span data-template="app:carousel-image-src-attribute"/><span data-template="app:carousel-image-alt-attribute"/><span data-template="app:carousel-image-dimension-attributes"/></img>
                        </a>
                    </div>
                    <div class="carousel-teaser" style="width: 85%;">
                        <h3 class="carousel-title">
                            <a xml:space="preserve"><span data-template="app:carousel-item-href-attribute"/><span data-template="app:carousel-item-heading"/></a>
                        </h3>
                        <p data-template="app:carousel-item-description"/>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
