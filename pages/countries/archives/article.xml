<?xml version="1.0" encoding="UTF-8"?>
<div data-template="pages:load">
   <div data-template="templates:surround"
        data-template-with="templates/site.xml"
        data-template-at="content">
      <div>
         <div id="static-title"
              class="hidden"
              data-template="archives:archive-pagetitle"/>
         <div class="row">
            <div data-template="pages:breadcrumb"/>
         </div>
         <div class="row">
            <div class="hsg-width-two-thirds">
               <div id="content-inner" data-template="app:fix-links">
                  <h1 data-template="archives:archive-title"/>
                  <div class="content"
                       data-template="pages:view"
                       data-template-heading-offset="1"/>
               </div>
            </div>
            <aside class="hsg-width-one-third">
               <div class="hsg-panel" data-template="app:fix-links">
                  <div class="hsg-panel-heading">
                     <h2 class="hsg-sidebar-title">Archives</h2>
                  </div>
                  <ul class="hsg-list-group">
                     <li class="hsg-list-group-item">
                        <a href="$app/countries/archives/all">List of all countries in the World
                                Wide Diplomatic Archives Index</a>
                     </li>
                     <li class="hsg-list-group-item">
                        <a href="$app/countries/archives">World Wide Diplomatic Archives
                                Index</a>
                     </li>
                  </ul>
               </div>
               <div id="sections" class="hsg-panel" data-template="app:fix-links">
                  <div class="hsg-panel-heading">
                     <h3 class="hsg-sidebar-title">Related Resources</h3>
                  </div>
                  <div class="hsg-panel-body">
                     <p>
                        <a href="$app/countries">Countries</a>
                     </p>
                  </div>
               </div>
            </aside>
         </div>
      </div>
   </div>
</div>
