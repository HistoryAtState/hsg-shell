<?xml version="1.0" encoding="UTF-8"?>
<div data-template="pages:load">
   <div data-template="templates:surround"
        data-template-with="templates/site.xml"
        data-template-at="content">
      <div class="row">
         <div id="static-title" class="hidden">
            <span data-template="frus-history:article-title"/> -
            Research - History of the Foreign Relations Series - Historical Documents</div>
         <div class="row">
            <div data-template="pages:breadcrumb"/>
         </div>
         <div class="row hsg-main">
            <div class="hsg-width-two-thirds">
               <div id="content-inner"
                    data-template="app:fix-links"
                    itemscope="itemscope"
                    itemtype="http://schema.org/Article">
                  <h1 class="hsg-navigation-title">
                     <span data-template="frus-history:article-title"/>
                  </h1>
                  <div data-template="frus-history:article-author"/>
                  <p data-template="frus-history:article-description"/>
                  <div data-template="frus-history:article"/>
               </div>
            </div>
            <aside data-template="pages:asides">
               <div id="sections" class="hsg-panel" data-template="app:fix-links">
                  <div class="hsg-panel-heading">
                     <h2 class="hsg-sidebar-title">
                        <em>FRUS</em> Sesquicentennial Research</h2>
                  </div>
                  <ul data-template="frus-history:article-list-sidebar"/>
               </div>
            </aside>
         </div>
      </div>
   </div>
</div>
