<?xml version="1.0" encoding="UTF-8"?>
<div data-template="pages:load">
   <div data-template="templates:surround"
        data-template-with="templates/site.xml"
        data-template-at="content">
      <div>
         <div id="static-title" class="hidden">
            <span data-template="frus-history:document-page-title"/> - Documents - History of the Foreign Relations Series - Historical Documents</div>
         <div class="row">
            <div data-template="pages:breadcrumb"/>
         </div>
         <div class="row hsg-main">
            <div class="hsg-width-two-thirds">
               <div id="content-inner" data-template="app:fix-links">
                  <h1>
                     <span data-template="frus-history:document-title"/>
                  </h1>
                  <p data-template="frus-history:document-pdf"/>
                  <p data-template="frus-history:document"/>
               </div>
                <div class="row" data-template="pages:navigation">
                    <a data-template="pages:navigation-link" data-template-direction="previous" class="page-nav nav-prev">
                        <i class="glyphicon glyphicon-chevron-left"/>
                    </a>
                    <a data-template="pages:navigation-link" data-template-direction="next" class="page-nav nav-next">
                        <i class="glyphicon glyphicon-chevron-right"/>
                    </a>
                </div>
            </div>
            <aside data-template="pages:asides">
               <div id="sections" class="hsg-panel" data-template="app:fix-links">
                  <div class="hsg-panel-heading">
                     <h2 class="hsg-sidebar-title">
                        <em>FRUS</em> History Documents</h2>
                  </div>
                  <ul data-template="frus-history:document-list-full"/>
               </div>
            </aside>
         </div>
      </div>
   </div>
</div>
