<div data-template="pages:load" data-template-ignore="true">
    <div data-template="templates:surround" data-template-with="templates/site.xml" data-template-at="content">
        <div data-template="news:init-article">
            <section class="row">
                <div data-template="pages:breadcrumb"/>
            </section>
            <section class="row">
                <div class="hsg-width-one-whole">
                    <div data-template="app:fix-links">
                        <h1 data-template="news:title"/>
                    </div>
                </div>
            </section>
            <section class="row">
                <div class="hsg-width-one-whole hsg-news hsg-news__container">
                    <img class="hsg-news__thumbnail" data-template="news:thumbnail"/>
                    <time class="hsg-badge hsg-badge__news" data-template="news:date"/>
                    <div class="hsg-news__content--article" data-template="news:article-content"/>
                    <a class="hsg-news__more" data-template="news:further-link" target="_blank"/>
                </div>
            </section>
        </div>
    </div>
</div>