<div data-template="pages:load" data-template-ignore="true">
    <div data-template="templates:surround" data-template-with="templates/site.xml" data-template-at="content">
        <section class="row">
            <div data-template="pages:breadcrumb"/>
        </section>
        <div data-template="news:init-article">
            <section class="row">
                <div class="hsg-width-one-whole">
                    <div data-template="app:fix-links">
                        <h1 data-template="news:heading"/>
                    </div>
                </div>
            </section>
            <section class="row">
                <div class="hsg-width-two-thirds hsg-news hsg-news__container">
                    <div class="hsg-badge hsg-badge__news" data-template="news:date"/>
                    <div class="hsg-news__content--article" data-template="news:article-content"/>
                    <a class="hsg-news__more" target="_blank" data-template="news:read-more-link"/>
                </div>
            </section>
        </div>
    </div>
</div>