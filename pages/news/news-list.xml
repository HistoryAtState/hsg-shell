<?xml version="1.0" encoding="UTF-8"?>
<div data-template="pages:load">
    <div data-template="templates:surround" data-template-at="content" data-template-with="templates/site.xml">
        <div class="hidden" id="static-title">News</div>
        <section class="row">
            <div data-template="pages:breadcrumb">
                <p id="breadcrumb-title">News</p>
            </div>
        </section>

        <section class="row">
            <div class="hsg-width-one-whole">
                <div data-template="app:fix-links">
                    <h1>News</h1>
                    <p>Latest news from Office of The Historian</p>
                </div>
            </div>
        </section>

        <section class="row" data-template="news:init-news-list">
            <div class="hsg-width-one-whole">
                <nav>
                    <ul class="pagination" data-template="pagination:paginate" data-template-per-page="20" data-template-min-hits="11"/>
                </nav>

                <ul class="hsg-list hsg-columns__flex hsg-list__news">
                    <li class="hsg-list__item" data-template="templates:each" data-template-from="entries"
                        data-template-to="entry">
                        <div class="hsg-list__item__row">
                            <span class="hsg-list__badge hsg-badge"
                                data-template="news:date"/>
                            <div class="hsg-list__item-wrap">
                                <h3 class="hsg-list__title" data-template="app:fix-links">
                                    <a class="hsg-list__link" data-template="news:title-link"/>
                                </h3>
                                <p class="hsg-list__text--truncated">
                                    <span class="hsg-list__text--truncated--ellipsis" data-template="news:summary"/>
                                </p>
                                <a class="hsg-news__more"
                                    href="historicaldocuments/frus1977-80v09/pressrelease"
                                    data-template="news:further-link"/>
                            </div>
                        </div>
                    </li>
                </ul>

                <nav>
                    <ul class="pagination" data-template="pagination:paginate" data-template-per-page="20" data-template-min-hits="11"/>
                </nav>

            </div>

        </section>
    </div>
</div>
