<?xml version="1.0" encoding="UTF-8"?>
<div data-template="pages:load">
    <div data-template="templates:surround"
         data-template-with="templates/site.xml"
         data-template-at="content">
            <div id="static-title" class="hidden">News</div>
            <section class="row">
                <div data-template="pages:breadcrumb">
                    <p id="breadcrumb-title">News</p>
                </div>
            </section>

            <section class="row">
                <div class="hsg-width-one-whole">
                    <div data-template="app:fix-links">
                        <h1>News</h1>
                        <p>Latest news from Office of The Historian</p>
                    </div>
                </div>
            </section>

            <section class="row">
                <div class="hsg-width-one-whole">
                    <ul class="hsg-list hsg-columns__flex">
                        <li class="hsg-list__item">
                            <div class="hsg-list__item__row">
                                <span class="hsg-list__badge hsg-badge hsg-badge--twitter">Jun 03, 2022</span>
                                <div class="hsg-list__item-wrap">
                                    <a class="hsg-list__link" href="#">A headline</a>
                                    <p class="hsg-list__paragraph">A text</p>
                                    <a class="hsg-list__more" href="#">
                                        <span>View Twitter post</span>
                                    </a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </section>
    </div>
</div>