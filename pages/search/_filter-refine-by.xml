<?xml version="1.0" encoding="UTF-8"?>
<div class="hsg-search-inputs-horizontal">
    <form action="?" class="filter-form" id="queryFilters">
        <div class="hsg-search-input">
            <input id="exactPhrase" name="match" type="checkbox" value="exact_phrase"/>
            <label class="c-indicator" for="exactPhrase">Exact Phrase</label>
        </div>
        <div class="hsg-search-input">
            <input id="caseSensitive" name="match" type="checkbox" value="case_sensitive"/>
            <label class="c-indicator" for="caseSensitive">Case Sensitive</label>
        </div>
        <div class="hsg-search-input">
            <input id="punctuationSensitive" name="match" type="checkbox"
                value="punctuation_sensitive"/>
            <label class="c-indicator" for="punctuationSensitive">Punctuation Sensitive</label>
        </div>
    </form>
</div>
