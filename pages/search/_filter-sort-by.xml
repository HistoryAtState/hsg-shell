<?xml version="1.0" encoding="UTF-8"?>
<div class="pull-right">
    <form action="$app/search" class="sorting" method="get">
        <div class="form-group">
            <p class="form-control-static">Sort by:</p>
        </div>
        <div class="btn-group">
            <button aria-expanded="" aria-haspopup="true" class="hsg-sort-button dropdown-toggle"
                data-toggle="dropdown" type="button">
                <span data-template="search:sort-by-label" id="sort-by-label"/>
                <i class="glyphicon glyphicon-chevron-down"/>
            </button>
            <ul class="dropdown-menu dropdown-menu-right" id="sort-by">
                <li>
                    <a href="#" id="relevance" name="sort-by">Relevance</a>
                </li>
                <li>
                    <a href="#" id="date-asc" name="sort-by">Dates (oldest first)</a>
                </li>
                <li>
                    <a href="#" id="date-desc" name="sort-by">Dates (most recent first)</a>
                </li>
            </ul>
        </div>
        <input data-template="templates:form-control" id="sorting" name="sort-by" type="hidden"
            value="relevance"/>
    </form>
</div>
