<?xml version="1.0" encoding="UTF-8"?>
<section class="hsg-section hsg-filter-toggle hsg-hidden" data-template="app:fix-links">
    <form method="get" action="$app/search" class="filter-form" id="dateFilter">
        <div class="hsg-width-one-half">
            <div class="hsg-panel">
                <div class="hsg-panel-heading">
                    <h3 class="hsg-sidebar-title-second-level">From</h3>
                </div>
                <div class="hsg-panel-body">
                    <fieldset>
                        <legend class="h3">Start Date</legend>
                        <p>Or, Exact Date (for single date searches)</p>
                        <span class="hsg-form-hint" id="startDateHint">For example: 12 07
                            1941</span>

                        <div class="hsg-start-date">
                            <div class="hsg-form-group hsg-form-group-month">
                                <label for="start_month">Month</label>
                                <input class="hsg-input-inline" placeholder="mm"
                                    aria-describedby="startDateHint" id="start_month"
                                    name="start_month" type="number" min="1" max="12" step="1"
                                    value=""/>
                            </div>
                            <div class="hsg-form-group hsg-form-group-day">
                                <label for="start_day">Day</label>
                                <input class="hsg-input-inline" placeholder="dd"
                                    aria-describedby="startDateHint" id="start_day" name="start_day"
                                    type="number" min="1" max="31" step="1" value=""/>
                            </div>
                            <div class="hsg-form-group hsg-form-group-year">
                                <label for="start_year">Year</label>
                                <input class="hsg-input-inline" placeholder="yyyy"
                                    aria-describedby="startDateHint" id="start_year"
                                    name="start_year" type="number" min="1600" max="2025" step="1"
                                    value=""/>
                            </div>
                            <input type="hidden" name="start-date"
                                data-template="templates:form-control"/>
                        </div>
                    </fieldset>

                    <fieldset>
                        <legend class="h3">Start Time <span class="hsg-form-hint">(optional)</span>
                        </legend>
                        <p>Or, Exact Time (for single date searches)</p>
                        <span class="hsg-form-hint" id="startTimeHint">For example: 09 00 am</span>
                        <div>
                            <div class="hsg-form-group hsg-form-group-month">
                                <label for="start_hour">Hour</label>
                                <input class="hsg-input-inline" placeholder="hh"
                                    aria-describedby="startTimeHint" id="start_hour"
                                    name="start_hour" type="number" min="0" max="12" step="1"
                                    value=""/>
                            </div>
                            <div class="hsg-form-group hsg-form-group-day">
                                <label for="start_minute">Minute</label>
                                <input class="hsg-input-inline" placeholder="mm"
                                    aria-describedby="startTimeHint" id="start_minute"
                                    name="start_minute" type="number" min="0" max="60" step="1"
                                    value=""/>
                            </div>
                            <div
                                class="hsg-form-group hsg-time-input-group hsg-search-inputs-horizontal">
                                <ul>
                                    <li class="hsg-search-input">
                                        <input type="radio" id="start_time_am"
                                            name="start_time_radio"/>
                                        <label for="start_time_am">am</label>
                                    </li>
                                    <li class="hsg-search-input">
                                        <input type="radio" id="start_time_pm"
                                            name="start_time_radio"/>
                                        <label for="start_time_pm">pm</label>
                                    </li>
                                </ul>
                            </div>
                            <input type="hidden" name="start-time"
                                data-template="templates:form-control"/>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="hsg-width-one-half">
            <div class="hsg-panel">
                <div class="hsg-panel-heading">
                    <h3 class="hsg-sidebar-title-second-level">To</h3>
                </div>
                <div class="hsg-panel-body">
                    <fieldset>
                        <legend class="h3">End Date <span class="hsg-form-hint">(optional)</span>
                        </legend>
                        <p>(Leave blank for exact date searches)</p>
                        <span class="hsg-form-hint" id="endDateHint">For example: 08 15 1945</span>

                        <div class="hsg-start-time">
                            <div class="hsg-form-group hsg-form-group-month">
                                <label for="end_month">Month</label>
                                <input class="hsg-input-inline" placeholder="mm"
                                    aria-describedby="endDateHint" id="end_month" name="end_month"
                                    type="number" min="1" max="12" step="1" value=""/>
                            </div>
                            <div class="hsg-form-group hsg-form-group-day">
                                <label for="end_day">Day</label>
                                <input class="hsg-input-inline" placeholder="dd"
                                    aria-describedby="endDateHint" id="end_day" name="end_day"
                                    type="number" min="1" max="31" step="1" value=""/>
                            </div>
                            <div class="hsg-form-group hsg-form-group-year">
                                <label for="end_year">Year</label>
                                <input class="hsg-input-inline" placeholder="yyyy"
                                    aria-describedby="endDateHint" id="end_year" name="end_year"
                                    type="number" min="1600" max="2025" step="1" value=""/>
                            </div>
                        </div>
                        <input type="hidden" name="end-date" data-template="templates:form-control"
                        />
                    </fieldset>

                    <fieldset>
                        <legend class="h3">End Time <span class="hsg-form-hint">(optional)</span>
                        </legend>
                        <p>(Leave blank for exact date searches)</p>
                        <span class="hsg-form-hint" id="endTimeHint">For example: 05 00 pm</span>
                        <div>
                            <div class="hsg-form-group hsg-form-group-month">
                                <label for="end_time_1">Hour</label>
                                <input class="hsg-input-inline" placeholder="hh"
                                    aria-describedby="endTimeHint" id="end_hour" name="end_hour"
                                    type="number" min="0" max="12" step="1" value=""/>
                            </div>
                            <div class="hsg-form-group hsg-form-group-day">
                                <label for="end_time_2">Minute</label>
                                <input class="hsg-input-inline" placeholder="mm"
                                    aria-describedby="endTimeHint" id="end_minute" name="end_minute"
                                    type="number" min="0" max="60" step="1" value=""/>
                            </div>
                            <div
                                class="hsg-form-group hsg-time-input-group hsg-search-inputs-horizontal">
                                <ul>
                                    <li class="hsg-search-input">
                                        <input type="radio" id="end_time_am" name="end_time_radio"/>
                                        <label for="end_time_am">am</label>
                                    </li>
                                    <li class="hsg-search-input">
                                        <input type="radio" id="end_time_pm" name="end_time_radio"/>
                                        <label for="end_time_pm">pm</label>
                                    </li>
                                </ul>
                            </div>
                            <input type="hidden" name="end-time"
                                data-template="templates:form-control"/>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
